@{
    ViewData["Title"] = "Authorization Successful";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #ffffff;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 50px;
            text-align: center;
        }

        .header {
            background-color: #ffeb3b; /* Yellow */
            padding: 40px;
            border-radius: 10px;
            margin-bottom: 40px;
        }

        .header h2 {
            font-size: 2.5rem;
            color: #212121;
        }

        p {
            font-size: 1.2rem;
            margin: 20px 0;
        }

        a {
            display: inline-block;
            background-color: #212121; /* Dark color */
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: bold;
            margin-top: 20px;
        }

        a:hover {
            background-color: #333;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h2>Authorization Successful</h2>
    </div>
    <p>You can close this page now.</p>
</div>
</body>
</html>

