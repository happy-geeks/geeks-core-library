@{
    ViewData["Title"] = "Authorization Failed";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #ffffff;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 50px;
            text-align: center;
        }

        .header {
            background-color: #ffeb3b; /* Yellow */
            padding: 40px;
            border-radius: 10px;
            margin-bottom: 40px;
        }

        .header h2 {
            font-size: 2.5rem;
            color: #212121;
        }

        p {
            font-size: 1.2rem;
            margin: 20px 0;
        }

        a {
            display: inline-block;
            background-color: #d32f2f; /* Red */
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: bold;
            margin-top: 20px;
        }

        a:hover {
            background-color: #b71c1c;
        }

        .alternative {
            margin-top: 20px;
        }

        .alternative a {
            background-color: #757575; /* Gray */
            color: #fff;
        }

        .alternative a:hover {
            background-color: #424242;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h2>Authorization Failed</h2>
    </div>
    <p>Please try again or contact support if the issue persists.</p>
</div>
</body>
</html>

